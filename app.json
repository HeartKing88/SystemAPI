{
  "name": "API Key Bot",
  "description": "Telegram Bot + Flask API for key-based access",
  "repository": "https://github.com/yourusername/api-bot",
  "keywords": ["telegram", "flask", "pyrogram", "api"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "MONGO_URL": {
      "description": "MongoDB connection string (MongoDB Atlas recommended)",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    },
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-mongo"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
